Algoritmo area_triangulo
	Escribir "Ingrese su nombre a continuacion: ";
	Leer nombre_user;
	Escribir "Hola ", nombre_user;
	Escribir "Escriba la base del triangulo a continuacion";
	Leer base
	Escribir "Escriba la altura del triangulo a continuacion"; 
	Leer altura 
	area <- ((base * altura) / 2); 
	Escribir "El area del triangulo es: ", area; 
	Escribir "Hasta pronto, ", nombre_user;
	
	
FinAlgoritmo